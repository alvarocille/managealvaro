<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_managealvaro_task_tree">
            <field name="name">view_managealvaro_task_tree</field>
            <field name="model">managealvaro.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="is_paused"/>
                </tree>
            </field>
        </record>

        <!-- form -->
        <record model="ir.ui.view" id="view_managealvaro_task_form">
            <field name="name">view_managealvaro_task_form</field>
            <field name="model">managealvaro.task</field>
            <field name="arch" type="xml">
                <form string="form_task">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="code"/>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="technology_ids"/>
                            </group>

                            <group name="group_right">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="is_paused"/>
                                <field name="sprint_id"/>
                                <field name="history_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions -->
        <record model="ir.actions.act_window" id="action_managealvaro_task_form">
            <field name="name">Tasks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">managealvaro.task</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Task
                </p>
                <p>Click <strong>'Crear'</strong> para añadir nuevos elementos.
                </p>
            </field>
        </record>

        <!-- Menú raiz -->
        <menuitem name="Manage" id="menu_managealvaro_root"/>

        <!-- Segundo nivel -->
        <menuitem name="Management" id="menu_managealvaro"
                  parent="menu_managealvaro_root"/>

        <!-- Tercer nivel -->
        <menuitem name="Tasks" id="menu_managealvaro_task"
                  parent="menu_managealvaro" action="action_managealvaro_task_form"/>
    </data>
</odoo>